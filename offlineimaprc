# Sample minimal config file.  Copy this to ~/.offlineimaprc and edit to
# suit to get started fast.

[general]
accounts = jnpr, versa

[Account versa]
localrepository = Local
remoterepository = VersaRemote
autorefresh = 1
#presynchook = ~/bin/sync_nnmaildir -g
#postsynchook = ~/bin/sync_nnmaildir -m

[Account jnpr]
localrepository = Local
remoterepository = JnprRemote
presynchook = imapfilter

[Repository Local]
type = Maildir
localfolders = ~/Maildir

[Repository JnprRemote]
type = IMAP
remotehost = pod51010.outlook.com
ssl = yes
remoteuser = chirag
remotepass = xxxxxxx

[Repository Remote]
type = Gmail
remoteuser = chirag@versa-networks.com
remotepass = xxxxxxxxxx
holdconnectionopen = true
keepalive = 60
realdelete = no
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
